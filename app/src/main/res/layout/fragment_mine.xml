<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp">

            <LinearLayout
                android:id="@+id/llEditHead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/ivMineHead"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/headhead" />

                <ImageView
                    android:padding="10dp"
                    android:id="@+id/xinghao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/minedit" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ivSetting"
                android:padding="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@mipmap/mine_tips" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textColor="#ffcccccc"
                android:textSize="14sp"
                />

            <ImageView
                android:layout_marginLeft="15dp"
                android:padding="10dp"
                android:id="@+id/editNickeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/minedit" />
        </LinearLayout>




        <TextView
            android:id="@+id/tvNickName"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ff202020"
            android:textSize="16sp"
            />


        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textColor="#ffcccccc"
                android:textSize="14sp"
                />

            <ImageView
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:id="@+id/editSex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/minedit" />
        </LinearLayout>




        <TextView
            android:id="@+id/tvSex"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="低调前行的小青年"
            android:textColor="#ff202020"
            android:textSize="16sp"
            />



        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄"
                android:textColor="#ffcccccc"
                android:textSize="14sp"
                />

            <ImageView
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:id="@+id/editAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/minedit" />
        </LinearLayout>




        <TextView
            android:id="@+id/tvAge"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="低调前行的小青年"
            android:textColor="#ff202020"
            android:textSize="16sp"
            />


        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_marginStart="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="签名"
                android:textColor="#ffcccccc"
                android:textSize="14sp"
                />

            <ImageView
                android:layout_marginStart="15dp"
                android:padding="10dp"
                android:id="@+id/editDescribe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/minedit" />
        </LinearLayout>



        <TextView
            android:id="@+id/tvDecs"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="低调前行的小青年"
            android:textColor="#ff202020"
            android:textSize="16sp"
            />


        <Button
            android:id="@+id/btnExit"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="50dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            android:text="退出登录"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_confirm"/>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>