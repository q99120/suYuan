<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_page_action"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llAction1"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="#F4F9FF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/iv_action1"
            android:src="@mipmap/action_refresh" />


        <TextView
            android:id="@+id/tv_action1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="20dp"
            android:text="刷新数据"
            android:textColor="#ff202020"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llAction2"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="#F4F9FF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_action2"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/action_reset" />


        <TextView
            android:id="@+id/tv_action2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="20dp"
            android:text="重置数据"
            android:textColor="#ff202020"
            android:textSize="14sp" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/llAction3"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:background="#F4F9FF"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_action3"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="18dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/action_delete" />


        <TextView
            android:id="@+id/tv_action3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingBottom="20dp"
            android:text="删除数据"
            android:textColor="#ff202020"
            android:textSize="14sp" />


    </LinearLayout>


        <LinearLayout
            android:visibility="invisible"
            android:id="@+id/llAction4"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:background="#F4F9FF"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_action4"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="18dp"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/action_refresh" />


            <TextView
                android:id="@+id/tv_action4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingBottom="20dp"
                android:text="刷新数据"
                android:textColor="#ff202020"
                android:textSize="14sp" />


        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="#F7F7F7"/>

</LinearLayout>