<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tvLiuChen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="15dp"
        android:text="生产流程"
        android:textColor="#202020"
        android:textSize="16sp"
        app:drawableStartCompat="@mipmap/home_trac1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvChooseCate"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="15dp"
        android:text="原料入库"
        android:textColor="#808080"
        android:textSize="16sp"
        app:drawableEndCompat="@mipmap/pozhehao"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/ll_edit_tracing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tvLiuChen"
        app:layout_constraintTop_toBottomOf="@+id/tvLiuChen">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/home_trac2" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editUName"
            android:hint="请输入责任人或工号..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:background="@null"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </LinearLayout>


    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@+id/ll_edit_tracing" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="产品条码"
        android:textColor="#202020"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/viewLine"
        app:layout_constraintTop_toBottomOf="@+id/viewLine" />

    <TextView
        android:layout_marginEnd="20dp"
        android:id="@+id/tvActionQr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:drawablePadding="15dp"
        android:text="扫一扫"
        android:textColor="#808080"
        android:textSize="14sp"
        app:drawableEndCompat="@mipmap/action_qrcode"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLine" />

    <EditText
        android:id="@+id/editProductName"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:gravity="left"
        android:hint="请填写外箱条码..."
        android:background="@drawable/shape_edit_bg"
        app:layout_constraintLeft_toLeftOf="@+id/viewLine"
        app:layout_constraintRight_toRightOf="@+id/tvActionQr"
        app:layout_constraintTop_toBottomOf="@+id/tvActionQr" />



    <LinearLayout
        android:id="@+id/llRich"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/editProductName"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:text="富文本编辑器"/>

        <com.yuruiyin.richeditor.RichEditText
            android:id="@+id/richEditText"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_edit_bg"
            android:gravity="top|left"
            android:layout_marginTop="15dp"
            android:hint="请输入..."
            android:inputType="textMultiLine"
            android:layout_width="match_parent"
            android:lineSpacingExtra="5dp"
            android:maxLength="20000"
            android:minHeight="250dp"
            android:paddingBottom="70dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="23dp"
            android:textColor="#171717"
            android:textColorHint="#aaaaaa"
            android:textCursorDrawable="@null"
            android:textSize="16dp"
            app:editor_video_mark_resource_id="@mipmap/ic_controller_easy_photos"
            app:editor_image_radius="3dp"
            app:editor_show_gif_mark="true"
            app:editor_show_video_mark="true"
            app:editor_show_long_image_mark="true"/>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/llEditBatch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tvLiuChen"
        app:layout_constraintTop_toBottomOf="@+id/llRich">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="生产批次:"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editProductNum"
            android:hint="请输入生产批次..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:background="@drawable/shape_edit_bg"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llEditOrderNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@+id/tvLiuChen"
        app:layout_constraintTop_toBottomOf="@+id/llEditBatch">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:text="订单号:"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/editOrderNum"
            android:hint="请输入订单号..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:background="@drawable/shape_edit_bg"
            android:textColor="@color/black"
            android:textSize="15sp" />


    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:drawablePadding="15dp"
        android:text="生产日期"
        android:textColor="#202020"
        android:textSize="16sp"
        app:drawableStartCompat="@mipmap/home_trac_time"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llEditOrderNum" />


    <TextView
        android:id="@+id/tvTracingTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:drawablePadding="15dp"
        android:text="2020-09-28 08:48:25"
        android:textColor="#808080"
        android:textSize="16sp"
        app:drawableEndCompat="@mipmap/pozhehao"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llEditOrderNum" />


    <View
        android:id="@+id/viewLine2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@+id/tvTracingTime" />


    <include
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/viewLine2"
        layout="@layout/layout_zhijian"/>



    <include
        android:visibility="gone"
        android:id="@+id/layoutImportFile"
        layout="@layout/layout_import_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/viewLine2" />


    <LinearLayout
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:background="#F4F9FF"
        android:padding="11dp"
        app:layout_constraintLeft_toLeftOf="@+id/layoutImportFile"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutImportFile">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="10dp"
            android:text="@string/notice" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>