<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingBottom="10dp"
    android:background="@color/normalBlue"
    android:gravity="center_vertical">

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivCalendar"
        android:layout_width="38.5dp"
        android:layout_height="38.5dp"
        android:layout_gravity="start"
        android:padding="10dp"
        android:src="@drawable/ic_calendar_black_19dp" />

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/slidTabLayout"
        android:layout_width="match_parent"
        app:tl_indicator_width="15dp"
        android:layout_height="40dp"
        app:tl_tab_padding="0dp"
        app:tl_tab_width="100dp"
        app:tl_textsize="15sp"/>

    <ImageView
        android:visibility="gone"
        android:id="@+id/ivSearch"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_gravity="end"
        android:padding="13dp"
        android:src="@drawable/ic_search_black_17dp" />

</FrameLayout>