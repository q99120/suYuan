<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/ivNoMoreCircle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="7dp"
        android:src="@mipmap/edit_no_more"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/ivNoMoreArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:src="@mipmap/edit_no_jiantou"
        app:layout_constraintBottom_toBottomOf="@+id/ivNoMoreCircle"
        app:layout_constraintLeft_toRightOf="@+id/ivNoMoreCircle"
        app:layout_constraintTop_toTopOf="@+id/ivNoMoreCircle" />

    <TextView
        android:id="@+id/tvNoMore"
        android:layout_width="179dp"
        android:layout_height="44dp"
        android:layout_marginTop="17dp"
        android:text="请先选择单个的流程，再
进行编辑操作..."
        android:textColor="#ffffffff"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@+id/ivNoMoreArrow"
        app:layout_constraintTop_toBottomOf="@+id/ivNoMoreArrow" />


    <Button
        android:layout_marginTop="45dp"
        android:id="@+id/btnNoMore"
        app:layout_constraintTop_toBottomOf="@+id/tvNoMore"
        android:layout_marginEnd="45dp"
        android:layout_marginStart="45dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="确定"
        android:background="@drawable/shape_search_bar"
        android:textColor="#007BFF"/>
</androidx.constraintlayout.widget.ConstraintLayout>