<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textColor="@color/red"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvPopItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:singleLine="false"
        android:text="销售一大区"
        android:textColor="#202020"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/tvId"
        app:layout_constraintRight_toLeftOf="@id/ivSeePic"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ivSeePic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/fangdajing"
        app:layout_constraintBottom_toBottomOf="@+id/tvPopItemTitle"
        app:layout_constraintRight_toLeftOf="@+id/ivTrace"
        app:layout_constraintTop_toTopOf="@+id/tvPopItemTitle" />


    <ImageView
        android:id="@+id/ivTrace"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:src="@mipmap/trace_unpress"
        app:layout_constraintBottom_toBottomOf="@+id/tvPopItemTitle"
        app:layout_constraintRight_toLeftOf="@+id/ivUpdate"
        app:layout_constraintTop_toTopOf="@+id/tvPopItemTitle" />

    <ImageView
        android:id="@+id/ivDelete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/shanchu"
        app:layout_constraintBottom_toBottomOf="@+id/tvPopItemTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvPopItemTitle" />

    <ImageView
        android:id="@+id/ivUpdate"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/xiugai"
        app:layout_constraintBottom_toBottomOf="@+id/tvPopItemTitle"
        app:layout_constraintRight_toLeftOf="@+id/ivDelete"
        app:layout_constraintTop_toTopOf="@+id/tvPopItemTitle" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        app:layout_constraintTop_toBottomOf="@+id/tvPopItemTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>