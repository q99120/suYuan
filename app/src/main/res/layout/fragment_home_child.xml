<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/normalBlue">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:id="@+id/rlStartTime"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvChooseStartTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="开始日期"
                    android:textColor="#ffffffff"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_marginEnd="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/page_down" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlEndDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">


                <TextView
                    android:id="@+id/tvEndTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:text="结束日期"
                    android:textColor="#ffffffff"
                    android:textSize="16sp" />


                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/page_down" />

            </RelativeLayout>

        </LinearLayout>






        <LinearLayout
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <View
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"/>

            <View
                android:id="@+id/viewEndLine"
                android:layout_marginStart="15dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/white"/>

        </LinearLayout>


    </LinearLayout>





    <EditText
        android:layout_marginEnd="10dp"
        app:layout_constraintRight_toLeftOf="@+id/tv_search"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/edit_search_bar"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_date"
        android:layout_marginStart="15dp"
        android:hint="请输入流程名称查询"
        android:paddingStart="20dp"
        android:background="@drawable/shape_search_bar"
        android:layout_width="0dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tv_search"
        android:layout_marginEnd="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/edit_search_bar"
        app:layout_constraintTop_toTopOf="@+id/edit_search_bar"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/edit_search_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索"
        android:textColor="#ffffffff"
        android:textSize="16sp"
        />

    <include
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_search"
        android:id="@+id/layout_page_action"
        layout="@layout/layout_page_action"/>

    <include
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/layoutadtitle"
        app:layout_constraintTop_toBottomOf="@+id/layout_page_action"
        layout="@layout/layoutadtitle"/>





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/homeMgRecycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutadtitle"/>

</androidx.constraintlayout.widget.ConstraintLayout>