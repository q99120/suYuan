<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_page_other">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <include
            android:id="@+id/layout_send_manage_fm"
            layout="@layout/layout_send_manage_fm"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp" />

        <Button
            android:id="@+id/btnSend"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginRight="45dp"
            android:layout_marginLeft="45dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_send_manage_fm"
            android:text="确定发货"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_confirm"/>



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>